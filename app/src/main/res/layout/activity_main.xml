<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.MainActivity">

    <ProgressBar
        android:id="@+id/pbConexion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivError"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/errorimage"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#303030"
        android:fontFamily="@font/chewy"
        android:gravity="center_horizontal"
        android:onClick="reloadConnection"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/reconnect"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/ivError" />

    <TextView
        android:id="@+id/tvWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chewy"
        tools:text="_ _ _ _ _ _ _"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/chewy"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/ivHeart"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="vidas" />

    <ImageView
        android:id="@+id/ivHeart"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart" />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/chewy"
        android:textSize="40sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Categoria" />

    <TableLayout
        android:id="@+id/tlButtons"
        android:layout_width="304dp"
        android:layout_height="295dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWord">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnA"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterA" />

            <Button
                android:id="@+id/btnB"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterB" />

            <Button
                android:id="@+id/btnC"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterC" />

            <Button
                android:id="@+id/btnD"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterD" />

            <Button
                android:id="@+id/btnE"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterE" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnF"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterF" />

            <Button
                android:id="@+id/btnG"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterG" />

            <Button
                android:id="@+id/btnH"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterH" />

            <Button
                android:id="@+id/btnI"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterI" />

            <Button
                android:id="@+id/btnJ"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterJ" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnK"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterK" />

            <Button
                android:id="@+id/btnL"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterL" />

            <Button
                android:id="@+id/btnM"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterM" />

            <Button
                android:id="@+id/btnN"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterN" />

            <Button
                android:id="@+id/btnN2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterN2" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnO"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterO" />

            <Button
                android:id="@+id/btnP"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterP" />

            <Button
                android:id="@+id/btnQ"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterQ" />

            <Button
                android:id="@+id/btnR"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterR" />

            <Button
                android:id="@+id/btnS"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterS" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnT"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterT" />

            <Button
                android:id="@+id/btnU"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterU" />

            <Button
                android:id="@+id/btnV"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterV" />

            <Button
                android:id="@+id/btnW"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterW" />

            <Button
                android:id="@+id/btnX"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterX" />

        </TableRow>

        <TableRow
            android:layout_width="178dp"
            android:layout_height="match_parent"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp">

            <Button
                android:id="@+id/btnY"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterY" />

            <Button
                android:id="@+id/btnZ"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btnColor"
                android:onClick="keyPressed"
                android:text="@string/letterZ" />

        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/ivSprite"
        android:layout_width="210dp"
        android:layout_height="257dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tvWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCategory"
        app:srcCompat="@drawable/hangman_sprite_uno" />


</androidx.constraintlayout.widget.ConstraintLayout>